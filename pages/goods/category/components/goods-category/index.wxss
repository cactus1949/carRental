.goods-category {
  display: flex;
  flex-direction: column;
}

.custom-sidebar {
  height: 100%;
}

.goods-category__right {
  height: 100%;
  flex: auto;
  width: 100%;
  position: relative;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  background-color: f8f5fa;
}

.flex {
  display: flex;
}

.goods-category-normal {
  margin: 28rpx 34rpx 0rpx 32rpx;
}

.goods-category-normal-item-title {
  font-size: 28rpx;
  font-weight: 500;
}

.goods-category-normal-item-container {
  background-color: #f8f5fa;
  border-radius: 8rpx;
  margin-top: -24rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-wrap: wrap;
}

.goods-category-normal-item-container-item {
  display: flex;
  flex-direction: column;
  margin-top: 24rpx;
  width: 100%;
  padding: 10px;
  background-color: #fff;
  position: relative;
}

.car-base-info-container {
  display: flex;
  align-items: center;
  height: 160rpx;
}

.car-detail-container {
  display: flex;
  align-items: flex-end;
  height: 80rpx;
}

.car-detail-btn {
  color: #707070;
}

.car-info-container {
  margin-left: 40rpx;
}

.car-info-container .car-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.car-info-container .car-infos {
  color: #707070;
}

.price {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: flex-end;
  color: chocolate;
}

.car-info-container .price .num {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.goods-category-normal-item-container-item .image {
  width: 200rpx;
  height: 144rpx;
}

.goods-category-normal-item-container-item-title {
  justify-content: center;
  font-size: 24rpx;
  color: #666666;
  margin-top: 20rpx;
}

.goods-category .custom-sidebar {
  background-color: #f5f5f5;
}

.custom-sidebar {
  width: 180rpx;
  height: 100vh;
}

.custom-sidebar::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.goods-category-normal-item-second-container {
  background-color: #fff;
  border-radius: 8rpx;
  margin-top: 8rpx;
  margin-bottom: 30rpx;
  display: grid;
  grid-template-columns: 33.33% 33.33% 33.33%;
}

.goods-category-normal-item-second-container-item {
  height: 200rpx;
  text-align: center;
  margin-top: 20rpx;
}

.goods-category-normal-item-second-container-item .image {
  width: 144rpx;
  height: 144rpx;
}

.goods-category-normal-item-second-container-item-title {
  justify-content: center;
  font-size: 24rpx;
  color: #222427;
}
